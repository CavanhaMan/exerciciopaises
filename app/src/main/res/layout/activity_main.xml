            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popnigeria" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="18"
            android:layout_column="1"
            android:id="@+id/imgnigeria"
            app:srcCompat="@drawable/bdnigeria" />

        <!-- OITAVO PAIS 21 22 23-->
        <TextView
            android:layout_row="21"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 8" />

        <TextView
            android:layout_row="22"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Bangladesh" />

        <TextView
            android:layout_row="23"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popbangladesh" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="21"
            android:layout_column="1"
            android:id="@+id/imgbangladesh"
            app:srcCompat="@drawable/bdbangladesh" />

        <!-- NONO PAIS 24 25 26-->
        <TextView
            android:layout_row="24"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 9" />

        <TextView
            android:layout_row="25"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Russia" />

        <TextView
            android:layout_row="26"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/poprussia" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="24"
            android:layout_column="1"
            android:id="@+id/imgrussia"
            app:srcCompat="@drawable/bdrussia" />

        <!-- DECIMO PAIS 27 28 29-->
        <TextView
            android:layout_row="27"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 10" />

        <TextView
            android:layout_row="28"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Japão" />

        <TextView
            android:layout_row="29"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popjapao" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="27"
            android:layout_column="1"
            android:id="@+id/imgjapao"
            app:srcCompat="@drawable/bdjapao" />

    </GridLayout>
</ScrollView >