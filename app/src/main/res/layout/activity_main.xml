        <ImageView
            style="@style/bandeira"
            android:layout_row="15"
            android:layout_column="1"
            android:id="@+id/imgpaquistao"
            app:srcCompat="@drawable/bdpaquistao" />

        <!-- SETIMO PAIS 18 19 20-->
