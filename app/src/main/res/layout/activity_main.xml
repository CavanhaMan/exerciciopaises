<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        tools:context=".MainActivity">

        <!-- PRIMEIRO PAIS 0 1 2-->
        <TextView
            style="@style/titulo"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Rank: 1" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: China" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popchina" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/imgchina"
            app:srcCompat="@drawable/bdchina" />

        <!-- SEGUNDO PAIS 3 4 5-->
        <TextView
            android:layout_row="3"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 2" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Índia" />

        <TextView
            android:layout_row="5"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popindia" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/imgindia"
            app:srcCompat="@drawable/bdindia" />

        <!-- TERCEIRO PAIS 6 7 8-->
        <TextView
            android:layout_row="6"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 3" />

        <TextView
            android:layout_row="7"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: EUA" />

        <TextView
            android:layout_row="8"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popeua" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="6"
            android:layout_column="1"
            android:id="@+id/imgeua"
            app:srcCompat="@drawable/bdeua" />

        <!-- QUARTO PAIS 9 10 11-->
        <TextView
            android:layout_row="9"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 4" />

        <TextView
            android:layout_row="10"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Indonésia" />

        <TextView
            android:layout_row="11"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popindonesia" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_gravity="end"
            android:id="@+id/imgindonesia"
            app:srcCompat="@drawable/bdindonesia" />

        <!-- QUINTO PAIS 12 13 14-->
        <TextView
            android:layout_row="12"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 5" />

        <TextView
            android:layout_row="13"
            android:layout_column="0"
            style="@style/texto"
            android:text="Country: Brasil" />

        <TextView
            android:layout_row="14"
            android:layout_column="0"
            style="@style/texto"
            android:text="@string/popbrasil" />

        <ImageView
            style="@style/bandeira"
            android:layout_row="12"
            android:layout_column="1"
            android:id="@+id/imgbrasil"
            app:srcCompat="@drawable/bdbrasil" />

        <!-- SEXTO PAIS 15 16 17-->
        <TextView
            android:layout_row="15"
            android:layout_column="0"
            style="@style/titulo"
            android:text="Rank: 6" />

        <TextView
            android:layout_row="16"
            android:layout_column="0"
            style="@style/texto"
